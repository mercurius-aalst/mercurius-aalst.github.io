@inherits LayoutComponentBase

<MudThemeProvider Theme="MyCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<NavMenu />

<div style="min-height:100vh;background-color:#dddddd">
	@Body
	<Footer />
</div>

@code {
    MudTheme MyCustomTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#217226",
            Secondary = "#EEEEEE"
        },

        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "DM Sans", "Helvetica", "Arial", "sans-serif" }
            }
        }
    };
}
